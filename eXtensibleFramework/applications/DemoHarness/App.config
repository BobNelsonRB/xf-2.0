      <endpoint address="http://hnocdev03.rbdev.local:8088/GenericService.svc" binding="wsHttpBinding" bindingConfiguration="wsBigArrays" contract="XF.Common.Wcf.IDataPacketService" name="default-remote"/>

      <endpoint address="http://localhost:6000/generic" binding="wsHttpBinding" bindingConfiguration="wsBigArrays" contract="XF.Common.Wcf.IDataPacketService" name="default"/>

    </client>

  </system.serviceModel>
  
  
    <startup> 
